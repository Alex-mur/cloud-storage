<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloud.storage.client.Controller">
    <VBox fx:id="mainArea" VBox.vgrow="ALWAYS">
        <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <VBox fx:id="localArea" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Text text="LOCAL" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Button fx:id="btnChooseLocalDir" onAction="#btnChooseDirClick" text="Choose local directory"></Button>
                </HBox>
                <VBox fx:id="localListArea" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                        <Button fx:id="btnChangeLocalDir" onAction="#btnChangeDirClick" text="Browse..."></Button>
                    </HBox>
                    <ListView HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    </ListView>
                </VBox>
            </VBox>

            <VBox fx:id="transferBtnArea" alignment="CENTER">
                <Button fx:id="sendBtn" alignment="CENTER" prefWidth="64.0" text="send→">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="rexeiveBtn" alignment="CENTER" text="←receive" />
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>

            </VBox>

            <VBox fx:id="remoteArea" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Text text="REMOTE" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                </HBox>
                <VBox fx:id="loginArea" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER">
                        <Text text="Login: " HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="30.0" />
                            </HBox.margin>
                        </Text>
                        <TextField fx:id="fieldLogin" />
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </HBox>

                    <HBox alignment="CENTER">
                        <Text text="Password: ">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Text>
                        <PasswordField fx:id="fieldPassword" />
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </HBox>

                    <HBox alignment="CENTER">
                        <Button fx:id="btnConnect" alignment="CENTER" onAction="#btnConnectClick" text="Connect to server" HBox.hgrow="ALWAYS" />
                        <padding>
                            <Insets left="65.0" />
                        </padding>
                    </HBox>
                </VBox>
                <VBox fx:id="remoteListArea" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <ListView HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    </ListView>
                </VBox>
            </VBox>
        </HBox>
        <HBox fx:id="logArea" HBox.hgrow="ALWAYS">
            <ListView fx:id="logAreaList" maxHeight="-Infinity" prefHeight="110.0" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>
</VBox>
